<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7E7DE"
    tools:context="com.example.alex.courseapp.OverviewActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical">

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00587A"
        >
        <LinearLayout

            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="38dp"
                android:textColor="#FFFCE6"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullnameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="Full name: "
            android:textSize="20dp"
            android:textColor="#00587A"/>

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Text"
            android:textSize="20dp"
            android:textColor="#0F3057" />




    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/topLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mat_nrLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Reg. number: "
            android:textSize="20dp"
            android:textColor="#00587A" />

        <TextView
            android:id="@+id/mat_nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Text"
            android:textSize="20dp"
            android:textColor="#0F3057"/>


    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/topLayout2"
        android:background="#CDCBA6"
        >

        <TextView

            android:id="@+id/exercise_group_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="Group: " />

        <TextView
            android:id="@+id/exercise_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="New Text"
            android:textColor="#0F3057"/>

    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/middleLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/topLayout2"
        android:background="#008891"
        >

        <TextView

            android:id="@+id/bonus_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="Earned bonus: "
            android:textColor="#CDCBA6"/>

        <TextView
            android:id="@+id/bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="New Text"
            android:textColor="#E7E7DE"/>

    </LinearLayout>


    <LinearLayout
        android:padding="20dp"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/middleLayout2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/qr_image"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_stat_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />


</LinearLayout>
